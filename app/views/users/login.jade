doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title= title
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/signin.css')
    link(href='/less/app.css', rel='stylesheet')

  body
    .container
      form.form-signin(action='/login', method='post')
        h2.form-signin-heading Please sign in
        input.form-control(name='email', required='required', type='email', placeholder='E-mail Address', autofocus=true)
        input.form-control(name='password', required='required', type='password', placeholder='Password')
        span.help-block #[a(href='/forgot') Forget your password?]
        button.btn.btn-lg.btn-primary.btn-block Login

    include ../shared/analytics
