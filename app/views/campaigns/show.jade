extends ../shared/template

block content
  div.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
    h1.page-header #{campaign.name}
    h3 #{campaign.description}

    div.add
      h4 Create a Project
      include ../projects/addProject
    div.list
      if(projects)
        ul
          each project in projects
            li
              a(href='/projects/#{project._id}') #{project.name}
      else
        p You haven't created any projects!

  div.col-sm-3.col-md-2.sidebar
    ul.nav.nav-sidebar
      include ../campaigns/campaigninfo

      if(user._id = campaign.ownerId)
        include ../campaigns/addEditor
