extends ../shared/template

block content
  div.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
    h1.page-header Notifications

    div.list
      div#notificationlist.table-responsive
        table.table.table-striped
          tbody
            each notification in notifications
              tr
                td #[a(href='/projects/#{notification.project._id}') #{notification.message}]
                td.hidden-xs #{moment(notification.created).fromNow()}
                td
                  include removeNotifications
            if (notifications == 0)
              tr
                td You don't have any notifications at this time.

  div.col-sm-3.col-md-2.sidebar
    ul.nav.nav-sidebar
      include ../users/userinfo
